  "main": "index.js",
  "bin": {
    "metalinks": "index.js"
  },
  "scripts": {
    "clean": "rm -rf tag",
    "start": "npm run clean && node index.js",
    "uninstall": "rm -rf node_modules",
    "uninstall!": "npm run uninstall && rm -f package-lock.json",
    "reinstall": "npm run uninstall! && npm install",
    "prettier": "npm run prettier-js && npm run prettier-json",
    "prettier-js": "prettier --single-quote --write \"**/*.{js,jsx,ts}\"",
    "prettier-json": "prettier --single-quote --write \"**/*.json\"",
    "eslint": "eslint . --ext .js,.jsx",
    "eslint-fix": "eslint . --fix --ext .js,.jsx",
    "format": "npm run prettier && npm run eslint-fix",
    "format!": "npm run lint && npm run format",
    "lint": "npm run prettier && npm run eslint",
    "test": "npm run lint && npm run mocha",
    "test!": "npm run format! && npm run test",
    "mocha": "mocha test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
