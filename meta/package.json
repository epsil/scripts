    "@babel/register": "^7.0.0",
    "child_process": "^1.0.2",
    "fs": "0.0.1-security",
    "glob": "^7.1.3",
    "gray-matter": "^4.0.2",
    "lodash": "^4.17.11",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "util": "^0.11.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
